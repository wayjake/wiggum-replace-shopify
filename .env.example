# =============================================================================
# Environment Variables Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env to version control!

# =============================================================================
# Stripe Configuration (Payment Processing)
# =============================================================================
# Get your keys from: https://dashboard.stripe.com/apikeys
VITE_STRIPE_PUBLIC_KEY=pk_test_...
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# =============================================================================
# Turso Database Configuration
# =============================================================================
# For local development, you can use: file:./local.db
# For production, use: libsql://your-database-name.turso.io
# Get your database URL from: https://turso.tech
TURSO_DATABASE_URL=libsql://...
# Only required for remote Turso databases (not needed for local file: URLs)
TURSO_AUTH_TOKEN=

# =============================================================================
# Brevo Email Configuration
# =============================================================================
# Get your API key from: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=xkeysib-...

# =============================================================================
# Inngest Configuration (Event Orchestration)
# =============================================================================
# Optional - only needed if using Inngest for background jobs
# Get your keys from: https://app.inngest.com/env/production/manage/signing-key
INNGEST_SIGNING_KEY=signkey-...
INNGEST_EVENT_KEY=

# =============================================================================
# Session Security
# =============================================================================
# Generate a secure random string (32+ characters)
# You can generate one with: openssl rand -base64 32
SESSION_SECRET=your-super-secret-session-key-minimum-32-characters-long

# =============================================================================
# Google OAuth Configuration (Optional)
# =============================================================================
# Only needed if you want to enable "Sign in with Google"
# Get your credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=...apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-...

# =============================================================================
# Application URL
# =============================================================================
# The base URL of your application (used for email links, redirects, etc.)
# For local development: http://localhost:5173
# For production: https://yourdomain.com
APP_URL=http://localhost:5173

# =============================================================================
# Node Environment
# =============================================================================
# Usually set automatically, but you can override if needed
# NODE_ENV=development
